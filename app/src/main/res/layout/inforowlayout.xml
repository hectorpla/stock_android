<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/form_head"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/form_data"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/form_head"
        android:layout_alignBottom="@+id/form_head"
        android:layout_marginStart="21dp"
        android:layout_toEndOf="@+id/form_head"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_form_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/form_data"
        android:layout_alignTop="@+id/form_data"
        app:srcCompat="@drawable/up" />

</RelativeLayout>